h1, h2, h3, label, li, span, a, div, input
  font-family 'Circe'
  font-weight 600

.mb
  margin-bottom 1.5rem

.el-icon-plus:before
  content "\e6d9"

.el-tabs__new-tab .el-icon-plus
  transform scale(.8, .8)\

.admin-title
  margin-bottom 20px
  font 600 22px Circe

.redact-create
  max-width 600px

.button-wrap
  display flex
  justify-content flex-start
  align-items flex-start
  width 100%
  .el-form-item__content
    margin-left calc(100% - 160px)

.el-page-header
  &__content
    color #606266
.header-page
  margin-bottom 20px

.el-form-item
  .el-select
    width 100%
  &:before, &:after
    display table
    content ''
  &:after
    clear both
  &__label
    float left
    width 160px
    text-align right
    vertical-align middle
  &__content
    position relative
    margin-left 160px
    &:before, &:after
      display table
      content ''

.el-page-header__title
  line-height 27px

.el-icon-back
  position relative
  top -3px

.el-checkbox
  margin-right 10px
  position relative
  top 1px

.active-label
  color #c9c4d1

.pr5
  padding-right 5px

.link
  color #409EFF
  text-decoration none
  &:hover
    color #66b1ff

.tag
  margin-right 5px
  &-dependencies
    &:hover
      background-color #409EFF
      cursor pointer
      a
        color #fff
  &-link
    text-decoration none
    color #409EFF


.decorate
  margin-bottom 20px

.col
  margin-top 40px
  display grid
  &_three
    grid-template-columns 10fr 5fr 7fr
  &_two
    grid-template-columns 10fr 12fr
  &-1
    border-right 1px solid #DCDFE6
    padding-right 20px
  &-2
    border-right 1px solid #DCDFE6
    padding-left 20px
.table-box
  max-width 1100px
  &-wrapper
    display flex
    flex-direction column
    align-items center
    justify-content center
    width 100%
  .el-table
    flex 2

.delete-times
  font-size 25px
  line-height 0
  position relative
  padding 0
  top 5px
  color #fde2e2
  &:hover
    color #F56C6C

.button-right
  justify-content flex-end
  margin-top 20px

.admin-enter-active, .admin-leave-active
  transition opacity 0.5s

.admin-enter, .admin-leave-active
  opacity 0

.list-enter-active, .list-leave-active
  max-height 20px
  transition all .4s
.list-enter, .list-leave-to
  opacity 0
  max-height 0px
  transform translateX(30px)
  transition all .4s